{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    }
  ],
  "env": {
    "XRPL_NETWORK": "wss://s.devnet.rippletest.net:51233"
  },
  "functions": {
    "api/**/*.ts": {
      "maxDuration": 30
    }
  }
}
